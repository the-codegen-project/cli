    "version": "0.2.0",
    "configurations": [
        {            
            "name": "mocha tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [ "-r", "ts-node/register", "${workspaceRoot}/test/**/*.test.ts", "--no-timeouts", 
            "--config", "${workspaceRoot}/.mocharc.json", "--node-option", "loader=ts-node/esm", "--node-option", "experimental-specifier-resolution=node", "--watch-extensions", "ts"],
            "cwd": "${workspaceRoot}"
        }
    ]
}