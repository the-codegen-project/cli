{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "complex-schema",
  "title": "Complex Schema Example",
  "description": "A complex schema demonstrating various JSON Schema features",
  "definitions": {
    "Address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2
        },
        "zipCode": {
          "type": "string",
          "pattern": "^[0-9]{5}(-[0-9]{4})?$"
        }
      },
      "required": ["street", "city", "state", "zipCode"]
    },
    "ContactInfo": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "pattern": "^\\+?[1-9]\\d{1,14}$"
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "person": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "minLength": 1
        },
        "lastName": {
          "type": "string",
          "minLength": 1
        },
        "dateOfBirth": {
          "type": "string",
          "format": "date"
        },
        "address": {
          "$ref": "#/definitions/Address"
        },
        "contact": {
          "$ref": "#/definitions/ContactInfo"
        }
      },
      "required": ["firstName", "lastName"]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  },
  "required": ["person"]
}
