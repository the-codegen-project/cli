{
  "asyncapi": "3.0.0",
  "info": {
    "title": "Account Service",
    "version": "1.0.0",
    "description": "This service is in charge of processing user signups"
  },
  "channels": {
    "userSignedup": {
      "address": "user/signedup/{my_parameter}/{enum_parameter}",
      "parameters": {
        "my_parameter": {
          "description": "parameter description"
        },
        "enum_parameter": {
          "description": "enum parameter",
          "enum":["openapi", "asyncapi"]
        }
      },
      "messages": {
        "UserSignedUp": {
          "$ref": "#/components/messages/UserSignedUp"
        }
      }
    },
    "NoParameter": {
      "address": "noparameters",
      "messages": {
        "UserSignedUp": {
          "$ref": "#/components/messages/UserSignedUp"
        }
      }
    },
    "requestAndReply": {
      "address": "/ping",
      "messages": {
        "ping": {
          "$ref": "#/components/messages/ping"
        },
        "pong": {
          "$ref": "#/components/messages/pong"
        }
      }
    }
  },
  "operations": {
    "sendUserSignedup": {
      "action": "send",
      "channel": {
        "$ref": "#/channels/userSignedup"
      },
      "messages": [
        {
          "$ref": "#/channels/userSignedup/messages/UserSignedUp"
        }
      ]
    },
    "pingRequest": {
      "action": "send",
      "channel": {
        "$ref": "#/channels/ping"
      },
      "messages": [
        "#/channels/ping/messages/ping"
      ],
      "reply": {
        "id": "pingRequestId",
        "channel": {
          "$ref": "#/channels/ping"
        },
        "messages": [
          "#/channels/ping/messages/pong"
        ]
      }
    },
    "pongReply": {
      "action": "receive",
      "channel": {
        "$ref": "#/channels/ping"
      },
      "messages": [
        "#/channels/ping/messages/ping"
      ],
      "reply": {
        "id": "pingReplyId",
        "channel": {
          "$ref": "#/channels/ping"
        },
        "messages": [
          "#/channels/ping/messages/pong"
        ]
      }
    }
  },
  "components": {
    "messages": {
      "UserSignedUp": {
        "payload": {
          "$ref": "#/components/schemas/UserSignedUpPayload"
        },
        "headers": {
          "$ref": "#/components/schemas/UserSignedUpPayload"
        }
      },
      "ping": {
        "payload": {
          "type": "object",
          "properties": {
            "event": {
              "type": "string",
              "const": "ping"
            }
          }
        }
      },
      "pong": {
        "payload": {
          "type": "object",
          "properties": {
            "event": {
              "type": "string",
              "const": "pong"
            }
          }
        }
      }
    },
    "schemas": {
      "UserSignedUpPayload": {
        "type": "object",
        "properties": {
          "display_name": {
            "type": "string",
            "description": "Name of the user"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email of the user"
          }
        }
      }
    }
  }
}