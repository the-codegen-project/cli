{
  
  "$schema": "https://raw.githubusercontent.com/asyncapi/spec-json-schemas/master/schemas/all.schema-store.json",
  "asyncapi": "3.0.0",
  "info": {
    "title": "Account Service",
    "version": "1.0.0",
    "description": "This service is in charge of processing user signups"
  },
  "channels": {
    "userSignedup": {
      "address": "user/signedup/{my_parameter}",
      "parameters": {
        "my_parameter": {
          "description": "parameter description"
        }
      },
      "messages": {
        "UserSignedUp": {
          "$ref": "#/components/messages/UserSignedUp"
        }
      }
    },
    "httpGetUser": {
      "address": "user/{user_id}",
      "parameters": {
        "user_id": {
          "description": "optional user id"
        }
      }
    }
  },
  "operations": {
    "HttpClientGetUser": {
      "action": "send",
      "channel": {
        "$ref": "#/channels/userSignedup"
      },
      "reply": {
        "messages": [
          {
            "$ref": "#/channels/userSignedup/messages/UserSignedUp"
          }
        ]
      },
      "bindings": {
        "http": {
          "bindingVersion": "0.3.0",
          "method": "GET",
          "query": {
            "type": "object",
            "properties": {
              "companyId": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "messages": {
      "UserSignedUp": {
        "payload": {
          "$ref": "#/components/schemas/User"
        }
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "display_name": {
            "type": "string",
            "description": "Name of the user"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email of the user"
          }
        }
      }
    }
  }
}