{
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": "./src",
    "module": "Node16",
    "target": "es2022",
    "moduleResolution": "Node16",
    "lib": [
      "esnext",
    ],
    "declaration": true,
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "esm": true
  }
}